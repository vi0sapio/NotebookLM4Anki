{
  "manifest_version": 3,
  "name": "NotebookLM Flashcards Extractor to CSV",
  "version": "1.0",
  "description": "Extracts Flashcards from NotebookLM for Anki using CSV format",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>" 
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "all_frames": true
    }
  ]
 
}